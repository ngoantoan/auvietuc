<section class="section-casestudies">
    <div class="heading heading--gradient heading--gradient--3">
        <h2 class="heading__title">Tin Tức & Sự Kiện</h2>
    </div>
    <!-- / heading -->
    <div class="boxBusiness">
        <div class="container">
            <div class="row">
                <!-- START BLOCK : blogs -->
                    <div class="col-xs-12 col-md-6 animate" data-anim-type="fadeInUp">
                        <div class="item-blog">
                            <a href="{link}">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-5">
                                        <img class="img-responsive img-blog" src="{image}" alt="{title}" style="height: 155px;object-fit: contain;">
                                    </div>
                                    <div class="col-xs-12 col-sm-7">
                                        <div class="description-blog">
                                            <div class="news-time">
                                                <h4><i class="far fa-newspaper"></i> Tin Tức</h4>
                                                <p>{created_at}</p>
                                            </div>
                                            <h4 class="title-blog">{title}</h4>
                                            <p>{description}</p>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                <!-- END BLOCK : blogs -->
            </div>
            <div class="boxCaseStudies__readmore animate" data-anim-type="fadeInUp" data-anim-delay="600">
                <a href="{link_blog}" class=""><i class="icon_grid-2x2"></i> Xem thêm tin</a>
            </div>
        </div>
    </div>
    <!-- / box BusinessClient -->
</section>