<div class="site-section bg-light">
  <div class="container">
    <div class="row" style="text-align: center; padding-bottom: 20px;">
        <div class="col-md-12">
            <h2>Đăng ký đại lý</h2>
        </div>
    </div>
    <div class="row">
      <div class="col-md-8 offset-md-2 mb-5">
        <form action="{action}" class="p-5 bg-white">
          <div class="row form-group">
            <div class="col-md-6 mb-3 mb-md-0">
              <label class="text-black" for="name">Họ tên</label>
              <input type="text" required name="name" id="name" class="form-control" />
            </div>
            <div class="col-md-6">
              <label class="text-black" for="phone">Số điện thoại</label>
              <input type="text" required name="phone" id="phone" class="form-control" />
            </div>
          </div>
          <div class="row form-group">
            <div class="col-md-12">
              <label class="text-black" for="email">Email</label> 
              <input type="email" required name="email" id="email" class="form-control" />
            </div>
          </div>
          <div class="row form-group">
            <div class="col-md-12">
              <label class="text-black" for="address">Địa chỉ</label> 
              <input type="address" required name="address" id="address" class="form-control" />
            </div>
          </div>
          <div class="row form-group">
            <div class="col-md-12">
              <label class="text-black" for="company">Công ty</label> 
              <input type="company" required name="company" id="company" class="form-control">
            </div>
          </div>
          <div class="row form-group">
            <div class="col-md-12">
              <label class="text-black" for="content">Nội Dung</label> 
              <textarea name="content" required id="content" cols="30" rows="7" class="form-control" placeholder="Viết ghi chú hoặc câu hỏi của bạn ở đây ..."></textarea>
            </div>
          </div>
          <div class="row form-group">
            <div class="col-md-12">
              <input type="submit" required value="Gửi" class="btn btn-red py-2 px-4 text-white">
            </div>
          </div>
        </form>
      </div>
