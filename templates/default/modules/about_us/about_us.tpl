<section class="section-subheader section-subheader--down" style="background-image: url({template_location}/images/our-clientele-1.jpg);">
    <div class="container">
        <div class="heading heading--gradient heading--gradient--8">
            <h1 class="heading__title">{title}</h1>
        </div>
        <ul class="breadcrumbs">
            <li><a href="{link_home}">Home</a></li>
            <li>Giới thiệu về evas</li>
        </ul>
    </div>
</section>
<!-- / subHeader -->

<section class="section-aboutDesc">
    <div class="container">
        <div class="section-aboutDesc__inner">
            {detail}
        </div>
    </div>
</section>
<!-- / About Description -->

<section class="section-aboutOurStory">
    <div class="container">
        <div class="heading heading--divider">
            <h2 class="heading__title">PHỤ HUYNH VÀ HỌC VIÊN NÓI VỀ EVAS</h2>
        </div>
        <div class="box-aboutOurStory">
            <!-- START BLOCK : opinion -->
                <div class="box-aboutOurStory__item" data-date="{title}">
                    <div class="box-aboutOurStory__item__inner">
                        <div class="box-aboutOurStory__item__inner__left">
                            <div class="box-aboutOurStory__item__icon box-aboutOurStory__item__icon--1">
                                <img src="{image}" alt="{name}">
                            </div>
                        </div>
                        <div class="box-aboutOurStory__item__inner__content">
                            <h4 class="box-aboutOurStory__item__date">{name}</h4>
                            <h3 class="box-aboutOurStory__item__title">{description}</h3>
                        </div>
                    </div>
                </div>
            <!-- END BLOCK : opinion -->
        </div>
    </div>
</section>
<!-- / About Our Story -->